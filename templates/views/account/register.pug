extends ../../layouts/default
include ../../mixins/flash-messages

block css
	link(href="/styles/css/account.min.css", rel="stylesheet")

block content
	.container.text-center
		.row
			.col-md-12
				h1.account-title Register to Forged Alliance Forever
				h4.account-subtitle.text-center Welcome to the Forged Alliance Forever registration page. To get started, please register with a unique username, email, and password.
				hr

		.row
			.col-md-offset-3.col-md-6
				+flash-messages(flash)
		.row
			.col-md-offset-3.col-md-6
				form(method='post',action="/account/register")
					.form-group()
						label Username
							input(type='text', name='username', required='required', value=formData['username']).form-control
					.form-group()
						label Email
							input(type='email', name='email', required='required', value=formData['email']).form-control
					.form-group()
						label Password
							input(type='password', name='password', required='required').form-control
					.form-group()
						label Confirm Password
							input(type='password', name='password_confirm', required='required').form-control
					.form-actions
						button(type='submit').btn.btn-default.btn-lg.btn-outro.btn-danger Register