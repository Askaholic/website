extends ../../layouts/default

block css
    link(href="/styles/css/account.min.css", rel="stylesheet")

block content
    .container.text-center
        .row
            .col-md-12
                h1.account-title Reset Password
                h4.account-subtitle.text-center Enter your username or email below to reset your password. A link will be sent to your email on account to securely reset your password.
                hr
        .row
            .col-md-offset-3.col-md-6
                form(method='post')
                    .form-group()
                        label Username
                            input(type='text', name='username', required='required').form-control

                    OR

                    .form-group()
                        label Email
                            input(type='email', name='email', required='required').form-control
                    .form-actions
                        button(type='submit').btn.btn-default.btn-lg.btn-outro.btn-danger Reset