extends competitive

block cContent
  h3#test
  
  button(onclick="prevPage()") Previous
  button(onclick="nextPage()") Next
  .input-group
    input(type="text" class="form-control" placeholder="Player name...")#searchbar
    span.input-group-btn
      button(class="btn btn-default" type="button" onclick="search()" id="search-button") Search
  table.table.table-striped.table-hover
    thead
      tr
        th #
        th Player
        th Rating
        th Games
    tbody#players

block js
  script(src='/js/app/leaderboards.js')
  //- Animated Scroll jQuery Plugin
  script(src='/js/jquery/jquery.animatedscroll-1.1.5.min.js')
